<Window x:Class="BatRecordingManager.TextEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BatRecordingManager"
        mc:Ignorable="d"
        Title="" Height="30" 
        Width="400" 
        WindowStyle="None" 
        ShowInTaskbar="False" 
        
        AutomationProperties.HelpText="Help text here" 
        Topmost="True">
    <Grid>
        <TextBox x:Name="textEditBlock" VerticalAlignment="Stretch" 
                 AutomationProperties.HelpText="Text block help" 
                 Text="fhghg"  Cursor="IBeam" 
                 IsManipulationEnabled="True" 
                 Focusable="True" 
                 PreviewKeyDown="textEditBlock_PreviewKeyDown"
                 AcceptsTab="True"/>
    </Grid>
</Window>
